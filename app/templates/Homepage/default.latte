                    </tr>
                </table>
            </div>



            <div class="title-content">
                <h1>Categories</h1>
            </div>
            <div class="mainContent-text">

                <table id="customers">
                    <tr>
                        <th>Category</th>
                        <th>Number of Topics</th>
                        <th>Number of Replies</th>
                    </tr>
                    {foreach $categories as $category}
                        <tr>
                            <td><a href="{link ViewCategory:default $category->id}">{$category->name}</a>
                                <p class="tfooter">{$category->description}</p></td>
                            <td><p class="stats">{$numTopics[$category['id']]}</p></td>
                            <td>{$numReplies[$category['id']]}</td>
                        {/foreach}
                </table>

            </div>               


        </div>

