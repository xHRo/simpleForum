<!-- CONTENT -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9 mainContent">
            <div class="title-content">
                <h1>Hot Topics</h1>
            </div>
            <div class="mainContent-text">
                <table id="hotTopics">
                    <tr>
                        <th>Topic</th>
                        <th>Category</th>
                        <th>Last Post By</th>
                    </tr>
